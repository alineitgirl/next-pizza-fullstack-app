

generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
    id Int @id @default(autoincrement())

    fullName String
    email String
    password String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

 model Product {
    id        Int     @id @default(autoincrement())
    name      String
    imageUrl  String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
